        input[type="file"] {
            display: none;
        }
    </style>
    <script>
        $(document).ready(function () {
            $('input[type=submit]').prop("disabled", false); 


            $("#Booklet_link").on('click', function (e) {
                e.preventDefault();
                $("#Booklet_input:hidden").trigger('click');
            });

            $('#Booklet_input').change(function (e) {
                var FileName = e.target.files[0].name;
